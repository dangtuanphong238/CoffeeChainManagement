<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AddNhanVienActivity">

    <include layout="@layout/layout_background_view" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/normal5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ảnh nhân viên:" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageButton
                            android:id="@+id/btnCapture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_camera_24" />

                        <ImageButton
                            android:id="@+id/btnChoose"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_photo_24" />
                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="250dp">

                        <ImageView
                            android:id="@+id/imgNhanVien"
                            android:layout_width="250dp"
                            android:layout_height="250dp"
                            android:layout_gravity="center_horizontal"
                            app:srcCompat="@drawable/noimage" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <EditText
                    android:layout_marginTop="@dimen/normal10dp"
                    android:id="@+id/edtTenNhanVien"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/normal50dp"
                    android:layout_marginHorizontal="@dimen/normal10dp"
                    android:background="@drawable/edit_text_main"
                    android:hint="@string/tennhanvien"
                    android:paddingHorizontal="@dimen/normal20dp"></EditText>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:layout_marginTop="@dimen/normal20dp"
                        android:id="@+id/spChucVu"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/normal50dp"
                        android:layout_marginHorizontal="@dimen/normal10dp"
                        android:background="@drawable/edit_text_main"
                        android:padding="@dimen/normal10dp"
                        android:spinnerMode="dropdown"
                        android:textAlignment="center"></Spinner>

                    <TextView
                        android:layout_marginTop="8dp"
                        android:background="@drawable/background_tv_spn"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="@dimen/normal30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="@string/chucvu"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp"></TextView>
                </RelativeLayout>

                <EditText
                    android:layout_marginTop="@dimen/normal10dp"
                    android:id="@+id/edtTenDangNhap"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/normal50dp"
                    android:layout_marginHorizontal="@dimen/normal10dp"
                    android:background="@drawable/edit_text_main"
                    android:hint="@string/tendangnhap"
                    android:paddingHorizontal="@dimen/normal20dp"></EditText>

                <EditText
                    android:layout_marginTop="@dimen/normal10dp"
                    android:id="@+id/edtMatKhau"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/normal50dp"
                    android:layout_marginHorizontal="@dimen/normal10dp"
                    android:background="@drawable/edit_text_main"
                    android:hint="@string/matkhau"
                    android:paddingHorizontal="@dimen/normal20dp"></EditText>

                <EditText
                    android:layout_marginTop="@dimen/normal10dp"
                    android:id="@+id/edtSoDienThoai"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/normal50dp"
                    android:layout_marginHorizontal="@dimen/normal10dp"
                    android:background="@drawable/edit_text_main"
                    android:hint="@string/sodienthoai"
                    android:inputType="number"
                    android:paddingHorizontal="@dimen/normal20dp"></EditText>

                <EditText
                    android:layout_marginTop="@dimen/normal10dp"
                    android:id="@+id/edtSoCMND"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/normal50dp"
                    android:layout_marginHorizontal="@dimen/normal10dp"
                    android:background="@drawable/edit_text_main"
                    android:hint="@string/soCMND"
                    android:inputType="number"
                    android:paddingHorizontal="@dimen/normal20dp"></EditText>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:layout_marginTop="@dimen/normal20dp"
                        android:id="@+id/spCaLam"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/normal50dp"
                        android:layout_marginHorizontal="@dimen/normal10dp"
                        android:background="@drawable/edit_text_main"
                        android:padding="@dimen/normal10dp"
                        android:spinnerMode="dropdown"
                        android:textAlignment="center"></Spinner>

                    <TextView
                        android:layout_marginTop="8dp"
                        android:background="@drawable/background_tv_spn"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="@dimen/normal30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="@string/lamtheoca"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp"></TextView>
                </RelativeLayout>

                <Button
                    android:id="@+id/btnThemNhanVien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginHorizontal="@dimen/normal20dp"
                    android:layout_marginVertical="@dimen/normal15dp"
                    android:background="@drawable/background_corner_grey"
                    android:padding="@dimen/normal10dp"
                    android:text="@string/themnhanvien"></Button>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>