<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_drawer"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activity.AddNhanVienActivity">
    <ScrollView
        android:background="#FE9B58"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include layout="@layout/toolbar"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ảnh nhân viên:"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/btnCapture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_camera_24"/>
                    <ImageButton
                        android:id="@+id/btnChoose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_photo_24"/>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="250dp">
                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/imgNhanVien"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        app:srcCompat="@drawable/noimage"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tennhanvien"
                android:layout_gravity="left"
                android:textSize="16dp"
                android:paddingHorizontal="10dp"
                android:textColor="@color/colorPrimary">
            </TextView>
            <EditText
                android:paddingHorizontal="20dp"
                android:id="@+id/edtTenNhanVien"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/custom_edittext">
            </EditText>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/chucvu"
                android:layout_gravity="left"
                android:textSize="16dp"
                android:paddingHorizontal="5dp"
                android:padding="5dp"
                android:textColor="@color/colorPrimary">
            </TextView>

            <Spinner
                android:id="@+id/spChucVu"
                android:spinnerMode="dropdown"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/custom_edittext"
                android:padding="10dp"
                android:textAlignment="center"></Spinner>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tendangnhap"
                android:layout_gravity="left"
                android:textSize="16dp"
                android:paddingHorizontal="10dp"
                android:textColor="@color/colorPrimary">
            </TextView>
            <EditText
                android:paddingHorizontal="20dp"
                android:id="@+id/edtTenDangNhap"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/custom_edittext">
            </EditText>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/matkhau"
                android:layout_gravity="left"
                android:textSize="16dp"
                android:paddingHorizontal="10dp"
                android:textColor="@color/colorPrimary">
            </TextView>
            <EditText
                android:id="@+id/edtMatKhau"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:paddingHorizontal="20dp"
                android:background="@drawable/custom_edittext">
            </EditText>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sodienthoai"
                android:layout_gravity="left"
                android:textSize="16dp"
                android:paddingHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:textColor="@color/colorPrimary">
            </TextView>
            <EditText
                android:id="@+id/edtSoDienThoai"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:paddingHorizontal="20dp"
                android:background="@drawable/custom_edittext">
            </EditText>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/soCMND"
                android:layout_gravity="left"
                android:textSize="16dp"
                android:paddingHorizontal="10dp"
                android:textColor="@color/colorPrimary">
            </TextView>
            <EditText
                android:id="@+id/edtSoCMND"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:paddingHorizontal="20dp"
                android:inputType="number"
                android:background="@drawable/custom_edittext">
            </EditText>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lamtheoca"
                android:layout_gravity="left"
                android:textSize="16dp"
                android:paddingHorizontal="10dp"
                android:padding="5dp"
                android:textColor="@color/colorPrimary">
            </TextView>

            <Spinner
                android:id="@+id/spCaLam"
                android:spinnerMode="dropdown"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:padding="10dp"
                android:textAlignment="center"
                android:background="@drawable/custom_edittext"
                />
            <Button
                android:id="@+id/btnThemNhanVien"
                android:layout_marginVertical="15dp"
                android:padding="10dp"
                android:textSize="16dp"
                android:layout_marginHorizontal="20dp"
                android:layout_gravity="right"
                android:background="@drawable/custom_button"
                android:text="@string/themnhanvien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></Button>
        </LinearLayout>

    </ScrollView>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:id="@+id/navDrawerMenu"
        app:menu="@menu/main_actions"
        >
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>