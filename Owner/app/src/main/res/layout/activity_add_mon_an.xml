<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_drawer"
    tools:context=".Activity.AddMonActivity">
    <LinearLayout android:background="#FE9B58"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <include layout="@layout/toolbar"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tenmonan"
            android:layout_gravity="left"
            android:textSize="20dp"
            android:paddingHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:textColor="@color/colorPrimary">
        </TextView>
        <EditText
            android:textAlignment="viewEnd"
            android:text="Cà Phê"
            android:id="@+id/edtTenMonAn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:padding="10dp"
            android:background="@drawable/custom_edittext">
        </EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/phanloai"
            android:layout_gravity="left"
            android:textSize="20dp"
            android:paddingHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:textColor="@color/colorPrimary">
        </TextView>
        <Spinner
            android:id="@+id/spPhanLoai"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp">
        </Spinner>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gia"
            android:layout_gravity="left"
            android:textSize="20dp"
            android:paddingHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:textColor="@color/colorPrimary">
        </TextView>
        <EditText
            android:textAlignment="viewEnd"
            android:text="30.000đ"
            android:id="@+id/edtGiaMonAn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:padding="10dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/custom_edittext">
        </EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/chonanh"
            android:layout_gravity="left"
            android:textSize="20dp"
            android:paddingHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:textColor="@color/colorPrimary">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/ImghinhMonAn"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/ic_baseline_image_24"></ImageView>

            <ImageButton
                android:id="@+id/mayanh"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/ic_baseline_camera_alt_24"></ImageButton>

            <ImageButton
                android:id="@+id/thuvienanh"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/ic_baseline_photo_library_24"></ImageButton>
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="20dp"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <Button
                android:id="@+id/btnCapNhat"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/custom_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/capnhat">
            </Button>
            <Button
                android:id="@+id/btnXoa"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/custom_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xoa">
            </Button>
        </LinearLayout>
    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:id="@+id/navDrawerMenu"
        app:menu="@menu/main_actions"
        >
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>