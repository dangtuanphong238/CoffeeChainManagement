<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_header_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/new_background_gradient"
    android:gravity="left"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/normal10dp">

    <androidx.cardview.widget.CardView
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="50dp">
        <ImageView
            android:layout_margin="2dp"
            android:id="@+id/nav_head_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginVertical="@dimen/normal5dp"
            android:src="@drawable/noimage" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/normal20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2">

        <TextView
            android:textColor="@color/white"
            android:id="@+id/nav_head_name_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/normal5dp"
            android:text="Cửa hàng con mòe"
            android:textSize="20dp" />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/nav_head_address_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/normal5dp"
            android:text="address"
            android:textSize="15dp" />
    </LinearLayout>

</LinearLayout>